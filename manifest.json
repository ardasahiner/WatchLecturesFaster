{
     "manifest_version": 2,

     "name": "Watch Lectures Faster",
     "description": "/* Icon made by Madebyoliver from www.flaticon.com */",
     "version": "1.0",
     "icons": {
          "32": "assets/icon.png"
     },

     "page_action": {
          "default_title": "Change Youtube Playback Speed"
     },

     "permissions": [
     ],

     "background": {
          "persistent": false,
          "scripts": [
               "src/background.js"
          ]
     },

     "content_scripts": [
          {
               "matches": [
                    "*://www.youtube.com/*"
               ],
               "js": [
                    "src/content.js"
               ],
               "css": [
               ],
               "run_at": "document_end"
          }
     ]
}
